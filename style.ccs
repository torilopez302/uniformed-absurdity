body {
  background: #181a1b;
  color: #fff;
  font-family: 'Segoe UI', Arial, sans-serif;
  margin: 0;
  padding: 0;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

#container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
}

#book {
  width: 400px;
  height: 550px;
  margin: 0 auto;
  box-shadow: 0 8px 32px rgba(0,0,0,0.7);
  border-radius: 12px;
  background: #222;
}
